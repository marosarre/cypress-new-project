{
  "json": {
    "enabled": true,
    "output": "jsonlogs/log.json",
    "formatter": "formatter/cucumber-json-formatter.exe"
  },
  "messages": {
    "enabled": true,
    "output": "jsonlogs/messages.ndjson"
  },
  "nonGlobalStepDefinitions": true,
  "html": {
    "enabled": false
  },
  "stepDefinitions": [
    "[filepath]/**/*.{js,ts}",
    "[filepath].{js,ts}",
    "cypress/e2e/step_definitions/*.{js,ts}",
    "[filepath]\\***.{js,ts}",
    "[filepath].{js,ts}",
    "cypress\\e2e\\step_definitions\\*.{js,ts}",
    "cypress\\e2e\\step_definitions\\common.js"
  ],
  "filterSpecs": true,
  "omitFiltered": true
}